<?xml version='1.0' encoding='utf-8'?>
<widget id="teamium.io.mobileapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Teamium</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <preference name="SplashScreen" value="none" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/icon/android/teamium-36.png" />
        <icon density="mdpi" src="res/icon/android/teamium-48.png" />
        <icon density="hdpi" src="res/icon/android/teamium-72.png" />
        <icon density="xhdpi" src="res/icon/android/teamium-96.png" />
        <icon density="xxhdpi" src="res/icon/android/teamium-144.png" />
        <icon density="xxxhdpi" src="res/icon/android/teamium-192.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="180" src="res/icon/ios/teamium-180.png" width="180" />
        <icon height="60" src="res/icon/ios/teamium-60.png" width="60" />
        <icon height="120" src="res/icon/ios/teamium-120.png" width="120" />
        <icon height="76" src="res/icon/ios/teamium-76.png" width="76" />
        <icon height="152" src="res/icon/ios/teamium-152.png" width="152" />
        <icon height="40" src="res/icon/ios/teamium-40.png" width="40" />
        <icon height="80" src="res/icon/ios/teamium-80.png" width="80" />
        <icon height="57" src="res/icon/ios/teamium-57.png" width="57" />
        <icon height="114" src="res/icon/ios/teamium-114.png" width="114" />
        <icon height="72" src="res/icon/ios/teamium-72.png" width="72" />
        <icon height="144" src="res/icon/ios/teamium-144.png" width="144" />
        <icon height="167" src="res/icon/ios/teamium-167.png" width="167" />
        <icon height="29" src="res/icon/ios/teamium-29.png" width="29" />
        <icon height="58" src="res/icon/ios/teamium-58.png" width="58" />
        <icon height="50" src="res/icon/ios/teamium-50.png" width="50" />
        <icon height="100" src="res/icon/ios/teamium-100.png" width="100" />
        <icon height="167" src="res/icon/ios/teamium-167.png" width="167" />
        <splash height="480" src="res/screen/ios/teamium-320-480.png" width="320" />
        <splash height="960" src="res/screen/ios/teamium-640-960.png" width="640" />
        <splash height="1136" src="res/screen/ios/teamium-640-1136.png" width="640" />
        <splash height="1334" src="res/screen/ios/teamium-750-1334.png" width="750" />
        <splash height="1024" src="res/screen/ios/teamium-768-1024.png" width="768" />
        <splash height="768" src="res/screen/ios/teamium-1024-768.png" width="1024" />
        <splash height="2208" src="res/screen/ios/teamium-1242-2208.png" width="1242" />
        <splash height="2048" src="res/screen/ios/teamium-1536-2048.png" width="1536" />
        <splash height="1536" src="res/screen/ios/teamium-2048-1536.png" width="2048" />
        <splash height="1242" src="res/screen/ios/teamium-2208-1242.png" width="2208" />
    </platform>
    <plugin name="cordova-plugin-screen-orientation" spec="^3.0.1" />
    <engine name="android" spec="^7.1.4" />
    <engine name="ios" spec="^4.5.5" />
    <engine name="browser" spec="^5.0.4" />
</widget>
